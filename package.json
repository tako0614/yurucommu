{
  "name": "takos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "vite --config src/frontend/vite.config.ts",
    "build": "vite build --config src/frontend/vite.config.ts && wrangler deploy --dry-run",
    "build:worker": "npx esbuild src/backend/index.ts --bundle --format=esm --target=es2022 --outfile=dist/worker.js --external:__STATIC_CONTENT_MANIFEST",
    "deploy": "vite build --config src/frontend/vite.config.ts && wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply takos-tenant-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply takos-tenant-db",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "jose": "^5.9.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^7.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.95.0"
  }
}
